<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0D0D0D">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
  <div class="app-container">
    <!-- Main Content -->
    <main class="main-content">
      <!-- Page Header -->
      <div class="page-header">
        <h1>Cari Komik</h1>
      </div>

      <!-- Search Bar -->
      <div class="search-container">
        <form action="/search" method="GET" class="search-form">
          <div class="search-input-wrapper">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="search-icon">
              <path d="M11 19C15.4183 19 19 15.4183 19 11C19 6.58172 15.4183 3 11 3C6.58172 3 3 6.58172 3 11C3 15.4183 6.58172 19 11 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <input
              type="text"
              name="q"
              class="search-input"
              placeholder="Cari judul, author, atau genre..."
              value="<%= query %>"
              autocomplete="off"
            >
            <% if (query) { %>
              <button type="button" class="btn-clear-search" onclick="window.location.href='/search'">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            <% } %>
          </div>
        </form>
      </div>

      <!-- Search Results -->
      <% if (query) { %>
        <% if (results.length > 0) { %>
          <div class="search-results-header">
            <p>Ditemukan <%= results.length %> komik untuk "<%= query %>"</p>
          </div>
          <div class="comics-grid">
            <% results.forEach(comic => { %>
              <%- include('components/comic_card', { comic }) %>
            <% }); %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <img src="https://i.imgur.com/XqQXQ0Y.png" alt="Tidak Ada Komik" class="empty-image">
            <p class="empty-text">Tidak Ada Komik</p>
            <p class="empty-subtext">Coba kata kunci lain</p>
          </div>
        <% } %>
      <% } else { %>
        <div class="search-suggestion">
          <p>Coba cari komik favoritmu!</p>
        </div>
      <% } %>
    </main>

    <!-- Bottom Navigation -->
    <%- include('components/bottom_nav') %>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
