<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= comic.description %>">
  <meta name="theme-color" content="#0D0D0D">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
  <div class="app-container">
    <!-- Main Content -->
    <main class="main-content">
      <!-- Back Button -->
      <div class="back-button">
        <a href="/" class="btn-back">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 12H5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 19L5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>

      <!-- Comic Detail Header -->
      <div class="comic-detail-header">
        <div class="comic-poster">
          <img src="<%= comic.cover %>" alt="<%= comic.title %>">
          <button class="btn-favorite" data-comic-id="<%= comic.id %>">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M20.84 4.61C20.3292 4.099 19.7228 3.69364 19.0554 3.41708C18.3879 3.14052 17.6725 2.99817 16.95 2.99817C16.2275 2.99817 15.5121 3.14052 14.8446 3.41708C14.1772 3.69364 13.5708 4.099 13.06 4.61L12 5.67L10.94 4.61C9.9083 3.57831 8.50903 2.99871 7.05 2.99871C5.59096 2.99871 4.19169 3.57831 3.16 4.61C2.1283 5.64169 1.54871 7.04097 1.54871 8.5C1.54871 9.95903 2.1283 11.3583 3.16 12.39L4.22 13.45L12 21.23L19.78 13.45L20.84 12.39C21.351 11.8792 21.7564 11.2728 22.0329 10.6054C22.3095 9.93789 22.4518 9.22248 22.4518 8.5C22.4518 7.77752 22.3095 7.06211 22.0329 6.39464C21.7564 5.72718 21.351 5.12084 20.84 4.61Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>

        <div class="comic-detail-info">
          <h1 class="comic-detail-title"><%= comic.title %></h1>

          <div class="comic-meta">
            <div class="meta-item">
              <span class="star">‚≠ê</span>
              <span class="rating-value"><%= comic.rating.toFixed(1) %></span>
            </div>
            <div class="meta-item">
              <span class="status-badge <%= comic.status === 'Berjalan' ? 'ongoing' : 'completed' %>">
                <%= comic.status %>
              </span>
            </div>
          </div>

          <div class="comic-stats">
            <div class="stat-item">
              <span class="stat-label">Author:</span>
              <span class="stat-value"><%= comic.authors.join(', ') %></span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Artist:</span>
              <span class="stat-value"><%= comic.artists.join(', ') %></span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Pengikut:</span>
              <span class="stat-value"><%= comic.followers.toLocaleString('id-ID') %></span>
            </div>
          </div>

          <div class="comic-genres-detail">
            <% comic.genres.forEach(genre => { %>
              <%- include('components/genre_badge', { genre }) %>
            <% }); %>
          </div>
        </div>
      </div>

      <!-- Synopsis Section -->
      <section class="synopsis-section">
        <h2>Sinopsis</h2>
        <div class="synopsis-content">
          <p class="synopsis-text" id="synopsisText"><%= comic.synopsis %></p>
          <button class="btn-read-more" id="btnReadMore">Selengkapnya</button>
        </div>
      </section>

      <!-- Chapters Section -->
      <section class="chapters-section">
        <h2>Daftar Chapter</h2>
        <div class="chapters-list">
          <% comic.chapters.forEach(chapter => { %>
            <a href="/comic/<%= comic.slug %>/chapter/<%= chapter.number %>" class="chapter-item <%= chapter.read ? 'read' : '' %>">
              <div class="chapter-info">
                <div class="chapter-title">Chapter <%= chapter.number %></div>
                <div class="chapter-date"><%= new Date(chapter.date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
              </div>
              <div class="chapter-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>
          <% }); %>
        </div>
      </section>
    </main>

    <!-- Bottom Navigation -->
    <%- include('components/bottom_nav') %>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
